@import ('../../stylus/index.styl');

.shop {
    .shopBox {
        width: 100vw;
        overflow: hidden;

        .inner {
            width: 9rem;
            box-sizing: border-box;
            overflow: hidden;
            margin: $margin 0;
            transition: margin 0.5s;

            .shopBox-hd {
                height: 0.4rem;
                line-height: 0.4rem;
                color: #a8a8a8;
                font-size: 0.1rem;

                img {
                    width: 0.2rem;
                    margin: 0 0.2rem;
                    vertical-align: middle;
                }
            }

            .shopBox-bd {
                height: 1.5rem;
                margin-left: $margin;
                overflow: hidden;

                .check {
                    width: 0.3rem;
                    height: 100%;
                    line-height: 1.5rem;
                    text-align: center;
                    float: left;

                    img {
                        width: 0.25rem;
                        height: 0.25rem;
                        vertical-align: middle;
                    }
                }

                .goodsImg {
                    float: left;
                    line-height: 1.5rem;
                    padding: 0 $margin;

                    img {
                        width: 0.7rem;
                        height: 0.7rem;
                        vertical-align: middle;
                    }
                }

                .goodsDetail {
                    float: left;
                    height: 100%;
                    width: 2.5rem;

                    h2 {
                        font-size: 0.12rem;
                        line-height: 0.3rem;
                        color: $font-333;
                    }

                    span {
                        display: inline-block;
                        width: 0.35rem;
                        font-size: 0.1rem;
                        height: 0.4rem;
                        line-height: 0.4rem;
                        text-align: center;
                        border: 0.01rem solid $font-ccc;
                        margin: $margin 0;
                    }
                }

                .price {
                    float: left;
                    line-height: 1.2rem;
                }

                .goodsDel {
                    width: 1.8rem;
                    background: $primary;
                    color: $font-white;
                    text-align: center;
                    line-height: 1.2rem;
                    float: right;
                }
            }
        }

        .inner-show-del {
            margin-left: -1.8rem;
        }
    }

    .footerArea {
        width: 100vw;
        height: 0.8rem;
        background: $font-white;
        position: fixed;
        left: 0;
        bottom: 1.08rem;
        border-top: 0.01rem solid $font-333;
        box-sizing: border-box;

        img {
            width: 0.3rem;
            height: 0.3rem;
        }

        .checkAll {
            float: left;
            margin: 0.1rem $margin;
        }

        .edit {
            float: left;
            margin: 0.1rem $margin;
        }

        .priceAll {
            float: left;
            margin: 0.1rem $margin;
            line-height: 0.8rem;
        }

        .goBuy {
            width: 1rem;
            height: 100%;
            background: $primary;
            color: $font-white;
            text-align: center;
            line-height: 0.8rem;
            font-size: 0.25rem;
            float: right;
        }
    }
}