@import ('../../stylus/index.styl');

.index {
    padding-bottom: $FooterHeight;

    .footer {
        width: 100vw;
        position: fixed;
        left: 0;
        bottom: 0;
        line-height: $FooterHeight;
        display: flex;
        background: $font-ccc;

        a {
            flex: 1;
            text-align: center;
            color: $font-000;

            div {
                line-height: 0.4rem;
            }

            img {
                width: 0.3rem;
                height: 0.3rem;
                display: block;
                margin: $margin auto;
            }
        }

        .select {
            color: $primary;
        }
    }
}